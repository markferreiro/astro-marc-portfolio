---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
console.log(currentPath);
---

<a
  class={`font-lalezar text-navbar h-5 ${
    currentPath !== "" && currentPath !== "/" ? "text-inactive" : ""
  }`}
  href="/"
>
  Home</a
>
<a
  class={`font-lalezar text-navbar h-5 ${
    currentPath !== "about" && currentPath !== "about/" ? "text-inactive" : ""
  }`}
  href="/about"
>
  About me</a
>
<a
  class={`font-lalezar text-navbar h-5 ${
    currentPath !== "projects" && currentPath !== "projects/"
      ? "text-inactive"
      : ""
  }`}
  href="/projects"
>
  Projects</a
>
